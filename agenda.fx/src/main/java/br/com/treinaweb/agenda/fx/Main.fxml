<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.control.cell.PropertyValueFactory ?>

<VBox maxHeight="420.0" maxWidth="600.0" minHeight="420.0"
	minWidth="600.0" prefHeight="420.0" prefWidth="600.0"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="br.com.treinaweb.agenda.fx.MainController">
	<children>
		<Pane prefHeight="50.0" prefWidth="600.0"
			style="-fx-background-color: #bbb;">
			<children>
				<Label layoutX="14.0" layoutY="12.0" text="Minha agenda">
					<font>
						<Font name="System Bold" size="18.0" />
					</font>
				</Label>
			</children>
		</Pane>
		<Pane prefHeight="261.0" prefWidth="600.0"
			style="-fx-background-color: #eee;">
			<children>
				<TableView fx:id="tabelaContatos" layoutX="9.0"
					layoutY="8.0" prefHeight="150.0" prefWidth="582.0">
					<columns>
						<TableColumn editable="false" prefWidth="285.0"
							text="Nome">
							<cellValueFactory>
								<PropertyValueFactory property="nome" />
							</cellValueFactory>								
						</TableColumn>
						<TableColumn editable="false" minWidth="0.0"
							prefWidth="77.0" text="Idade">
							<cellValueFactory>
								<PropertyValueFactory property="idade" />
							</cellValueFactory>
						</TableColumn>
						<TableColumn editable="false" prefWidth="219.0"
							text="Telefone">
							<cellValueFactory>
								<PropertyValueFactory property="telefone" />
							</cellValueFactory>	
						</TableColumn>
					</columns>
				</TableView>
				<Button fx:id="botaoInserir" layoutX="14.0" layoutY="187.0"
					mnemonicParsing="false" prefHeight="27.0" prefWidth="148.0"
					text="Incluir" />
				<Button fx:id="botaoAlterar" layoutX="226.0" layoutY="187.0"
					mnemonicParsing="false" prefHeight="27.0" prefWidth="148.0"
					text="Alterar" />
				<Button fx:id="botaoExcluir" layoutX="438.0" layoutY="187.0"
					mnemonicParsing="false" prefHeight="27.0" prefWidth="148.0"
					text="Excluir" />
			</children>
		</Pane>
		<TitledPane animated="false" collapsible="false"
			prefHeight="116.0" prefWidth="600.0" text="Informações de contato">
			<content>
				<GridPane>
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES"
							maxWidth="296.0" minWidth="10.0" prefWidth="288.0" />
						<ColumnConstraints hgrow="SOMETIMES"
							maxWidth="187.0" minWidth="10.0" prefWidth="69.0" />
						<ColumnConstraints hgrow="SOMETIMES"
							maxWidth="227.0" minWidth="10.0" prefWidth="221.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" prefHeight="30.0"
							vgrow="SOMETIMES" />
					</rowConstraints>
					<children>
						<Label prefHeight="17.0" prefWidth="43.0" text="Nome:">
							<GridPane.margin>
								<Insets left="5.0" />
							</GridPane.margin>
						</Label>
						<Label prefHeight="17.0" prefWidth="38.0" text="Idade:"
							GridPane.columnIndex="1">
							<GridPane.margin>
								<Insets left="5.0" />
							</GridPane.margin>
						</Label>
						<Label text="Telefone:" GridPane.columnIndex="2">
							<GridPane.margin>
								<Insets left="5.0" />
							</GridPane.margin>
						</Label>
						<TextField fx:id="txtNome" GridPane.rowIndex="1">
							<GridPane.margin>
								<Insets left="5.0" right="5.0" />
							</GridPane.margin>
						</TextField>
						<TextField fx:id="txtIdade" GridPane.columnIndex="1"
							GridPane.rowIndex="1">
							<GridPane.margin>
								<Insets left="5.0" right="5.0" />
							</GridPane.margin>
						</TextField>
						<TextField fx:id="txtTelefone" GridPane.columnIndex="2"
							GridPane.rowIndex="1">
							<GridPane.margin>
								<Insets left="5.0" right="5.0" />
							</GridPane.margin>
						</TextField>
						<Button fx:id="botaoSalvar" mnemonicParsing="false"
							prefHeight="25.0" prefWidth="75.0" text="Salvar"
							GridPane.columnIndex="2" GridPane.rowIndex="2">
							<GridPane.margin>
								<Insets left="110.0" top="10.0" />
							</GridPane.margin>
						</Button>
						<Button fx:id="botaoCancelar" mnemonicParsing="false"
							prefHeight="25.0" prefWidth="75.0" text="Cancelar"
							GridPane.columnIndex="2" GridPane.rowIndex="2">
							<GridPane.margin>
								<Insets left="30.0" right="5.0" top="10.0" />
							</GridPane.margin>
						</Button>
					</children>
				</GridPane>
			</content>
		</TitledPane>
	</children>
</VBox>
